<Window x:Class="ath_p4_proj2.Windows.MyDevicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localvm="clr-namespace:ath_p4_proj2.ViewModels"
        mc:Ignorable="d"
        Title="Moje urządzenia" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <localvm:MyDevicesViewModel />
    </Window.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding Devices}">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="20" />
                </Style>
            </DataGrid.Resources>
        </DataGrid>

    </Grid>
</Window>
